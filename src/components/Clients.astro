---
// Clients Component - Logos de clientes/aliados
const logos = [
    { src: "/marcas/Imagotipo_FestivaCine.png", alt: "FestivaCine" },
    { src: "/marcas/LOGOTIPOS_Mesa.png", alt: "Logotipos Mesa" },
    { src: "/marcas/POWERED_BY_VELTRAC_Negro.png", alt: "Powered by Veltrac" },
    { src: "/marcas/VMF_PRO_DIGITAL_2.png", alt: "VMF Pro Digital" },
    { src: "/marcas/CINERGIA.jpeg", alt: "Cinergia" },
    { src: "/marcas/LA MAYU.png", alt: "La Mayu" },
];
---

<section class="py-16 bg-slate-50">
    <div class="max-w-7xl mx-auto px-6 lg:px-8">
        <h3 class="text-center text-slate-400 text-sm font-bold uppercase tracking-widest mb-12">Confían en mí</h3>
        <div class="logos-grid">
            {logos.map((logo) => (
                <div class="logo-cell">
                    <img src={logo.src} alt={logo.alt} loading="lazy" />
                </div>
            ))}
        </div>
    </div>
</section>

<style>
    .logos-grid {
        display: grid;
        grid-template-columns: repeat(3, 1fr);
        align-items: center;
        justify-items: center;
        gap: 2rem 1.5rem;
    }

    .logo-cell {
        width: 100%;
        max-width: 140px;
        height: 50px;
        display: flex;
        align-items: center;
        justify-content: center;
    }

    .logo-cell img {
        max-width: 100%;
        max-height: 100%;
        object-fit: contain;
        filter: grayscale(100%);
        opacity: 0.6;
        transition: filter 0.3s ease, opacity 0.3s ease;
    }

    .logo-cell img:hover {
        filter: grayscale(0%);
        opacity: 1;
    }

    /* Tablet: todos en una fila */
    @media (min-width: 640px) {
        .logos-grid {
            grid-template-columns: repeat(6, 1fr);
            gap: 1.5rem 2rem;
        }

        .logo-cell {
            max-width: 150px;
            height: 56px;
        }
    }

    /* Desktop */
    @media (min-width: 1024px) {
        .logos-grid {
            gap: 2rem 3rem;
        }

        .logo-cell {
            max-width: 170px;
            height: 64px;
        }
    }
</style>
