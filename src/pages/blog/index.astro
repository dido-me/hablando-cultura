  <script>
    document.addEventListener('DOMContentLoaded', () => {
      // Elementos del DOM
      const categoryFilters = document.querySelectorAll('.category-filter');
      const categoryBadgeBtns = document.querySelectorAll('.category-badge-btn');
      const blogPosts = document.querySelectorAll('.blog-post');
      const filterStatus = document.getElementById('filter-status');
      const filterCount = document.getElementById('filter-count');
      const filterPlural = document.getElementById('filter-plural');
      const filterCategory = document.getElementById('filter-category');
      const clearFilterBtn = document.getElementById('clear-filter');
      const showAllBtn = document.getElementById('show-all-btn');
      const postsTitle = document.getElementById('posts-title');
      const emptyState = document.getElementById('empty-state');
      const postsGrid = document.getElementById('posts-grid');
      const featuredSection = document.getElementById('featured-section');

      let currentCategory = '';

      // Función para resetear estilos de un botón
      function resetButtonStyles(btn: Element) {
        const el = btn as HTMLElement;
        const bgClass = el.dataset.bg;
        const textClass = el.dataset.text;
        
        // Remover clases de estado activo
        el.classList.remove('bg-[var(--primary)]', 'text-white');
        
        // Remover clases de estado inactivo (las originales del botón)
        if (bgClass) el.classList.remove(bgClass);
        if (textClass) el.classList.remove(textClass);
      }

      // Función para filtrar posts
      function filterPosts(category: string) {
        currentCategory = category;
        let visibleCount = 0;

        // Filtrar posts
        blogPosts.forEach((post) => {
          const postCategory = (post as HTMLElement).dataset.category;
          const isFeatured = (post as HTMLElement).dataset.featured === 'true';
          
          if (!category || postCategory === category) {
            (post as HTMLElement).style.display = '';
            if (!isFeatured) visibleCount++;
          } else {
            (post as HTMLElement).style.display = 'none';
          }
        });

        // Actualizar UI de botones de filtro
        categoryFilters.forEach((btn) => {
          const el = btn as HTMLElement;
          const btnCategory = el.dataset.category ?? '';
          const isActive = btnCategory === category;
          const bgClass = el.dataset.bg;
          const textClass = el.dataset.text;
          
          // Resetear estilos
          resetButtonStyles(btn);
          
          if (isActive) {
            // Botón activo - siempre púrpura/primary
            el.classList.add('bg-[var(--primary)]', 'text-white');
          } else {
            // Botón inactivo - usar sus colores originales de data attributes
            if (bgClass) el.classList.add(bgClass);
            if (textClass) el.classList.add(textClass);
          }
        });

        // Actualizar estado del filtro
        if (category && filterStatus && filterCount && filterPlural && filterCategory) {
          filterStatus.classList.remove('hidden');
          filterStatus.classList.add('flex');
          filterCount.textContent = visibleCount.toString();
          filterPlural.textContent = visibleCount !== 1 ? 's' : '';
          filterCategory.textContent = category;
        } else if (filterStatus) {
          filterStatus.classList.add('hidden');
          filterStatus.classList.remove('flex');
        }

        // Actualizar título
        if (postsTitle) {
          postsTitle.textContent = category ? `Artículos en "${category}"` : 'Todos los artículos';
        }

        // Mostrar/ocultar featured section
        if (featuredSection) {
          featuredSection.style.display = category ? 'none' : '';
        }

        // Mostrar estado vacío si no hay posts visibles en grid
        if (emptyState && postsGrid) {
          if (visibleCount === 0 && category) {
            emptyState.classList.remove('hidden');
            postsGrid.classList.add('hidden');
          } else {
            emptyState.classList.add('hidden');
            postsGrid.classList.remove('hidden');
          }
        }

        // Actualizar URL sin recargar
        const url = new URL(window.location.href);
        if (category) {
          const slugMap: Record<string, string> = {
            'Gestión Cultural': 'gestion-cultural',
            'Transformación Digital': 'transformacion-digital',
            'Innovación': 'innovacion',
            'Emprendimiento': 'emprendimiento',
            'Marketing Cultural': 'marketing-cultural',
            'Patrimonio': 'patrimonio',
            'Eventos': 'eventos',
          };
          url.searchParams.set('categoria', slugMap[category] || category.toLowerCase());
        } else {
          url.searchParams.delete('categoria');
        }
        window.history.pushState({}, '', url.toString());
      }

      // Event listeners para botones de categoría
      categoryFilters.forEach((btn) => {
        btn.addEventListener('click', () => {
          const category = (btn as HTMLElement).dataset.category ?? '';
          filterPosts(category);
        });
      });

      // Event listeners para badges de categoría en posts
      categoryBadgeBtns.forEach((btn) => {
        btn.addEventListener('click', (e) => {
          e.preventDefault();
          e.stopPropagation();
          const category = (btn as HTMLElement).dataset.filterCategory ?? '';
          filterPosts(category);
          // Scroll suave a los filtros
          document.querySelector('.category-filter')?.scrollIntoView({ behavior: 'smooth', block: 'center' });
        });
      });

      // Event listener para limpiar filtro
      if (clearFilterBtn) {
        clearFilterBtn.addEventListener('click', () => {
          filterPosts('');
        });
      }

      // Event listener para mostrar todos
      if (showAllBtn) {
        showAllBtn.addEventListener('click', () => {
          filterPosts('');
        });
      }

      // Verificar si hay un filtro en la URL al cargar
      const urlParams = new URLSearchParams(window.location.search);
      const categorySlug = urlParams.get('categoria');
      if (categorySlug) {
        const slugToCategory: Record<string, string> = {
          'gestion-cultural': 'Gestión Cultural',
          'transformacion-digital': 'Transformación Digital',
          'innovacion': 'Innovación',
          'emprendimiento': 'Emprendimiento',
          'marketing-cultural': 'Marketing Cultural',
          'patrimonio': 'Patrimonio',
          'eventos': 'Eventos',
        };
        const category = slugToCategory[categorySlug];
        if (category) {
          filterPosts(category);
        }
      }
    });
  </script>
</Layout>
