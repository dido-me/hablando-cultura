---
// Footer Component - Pie de página y contacto
import TextFlip from './TextFlip';
---

<footer class="bg-[#020617] text-white pt-32 pb-12 relative overflow-hidden" id="contacto">
    <div class="absolute top-0 left-0 w-full h-64 bg-gradient-to-b from-[#0f172a] to-[#020617]"></div>
    
    <div class="max-w-7xl mx-auto px-6 lg:px-8 relative z-10 text-center">
        <!-- YouTube/Spotify CTA con animación -->
        <div class="mb-24 transform md:scale-110">
            <TextFlip
                client:load
                platforms={[
                    {
                        name: 'YouTube',
                        color: '#ef4444',
                        image: '/fotos-karolay/1.webp',
                        url: 'https://www.youtube.com/@hablandocultura'
                    },
                    {
                        name: 'Spotify',
                        color: '#22c55e',
                        image: '/fotos-karolay/1.webp',
                        url: 'https://open.spotify.com/show/hablandocultura'
                    },
                    {
                        name: 'TikTok',
                        color: '#ffffff',
                        image: '/fotos-karolay/1.webp',
                        url: 'https://www.tiktok.com/@hablandocultura?_r=1&_t=ZS-93NqZUxbiee'
                    }
                ]}
                interval={5000}
            />
        </div>
        
        <!-- Redes sociales -->
        <div class="flex justify-center items-center gap-2 mb-12">
            <!-- Email -->
            <a class="w-10 h-10 flex items-center justify-center text-slate-400 hover:text-white transition-colors" href="mailto:hablandocultura@gmail.com" aria-label="Email">
                <svg class="w-5 h-5 fill-current" viewBox="0 0 24 24">
                    <path d="M20 4H4c-1.1 0-1.99.9-1.99 2L2 18c0 1.1.9 2 2 2h16c1.1 0 2-.9 2-2V6c0-1.1-.9-2-2-2zm0 4l-8 5-8-5V6l8 5 8-5v2z"></path>
                </svg>
            </a>
            <!-- Instagram -->
            <a class="w-10 h-10 flex items-center justify-center text-slate-400 hover:text-white transition-colors" href="https://www.instagram.com/hablandocultura/" target="_blank" rel="noopener noreferrer" aria-label="Instagram">
                <svg class="w-5 h-5 fill-current" viewBox="0 0 24 24">
