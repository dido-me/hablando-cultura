---
export const prerender = true;

import Layout from "../../layouts/Layout.astro";
import { getCollection } from "astro:content";
import { 
  CATEGORY_COLORS, 
  CATEGORY_SLUGS,
  type BlogCategory 
} from "../../lib/constants";

export async function getStaticPaths() {
  const posts = await getCollection("blog");
  return posts.map((post) => ({
    params: { slug: post.slug },
    props: { post },
  }));
}

const { post } = Astro.props;
const { Content } = await post.render();

// Formatear fecha
function formatDate(date: Date): string {
  return date.toLocaleDateString("es-ES", {
    day: "2-digit",
    month: "long",
    year: "numeric",
  });
}

// Obtener posts relacionados (misma categoría)
const allPosts = await getCollection("blog");
const relatedPosts = allPosts
  .filter((p) => p.slug !== post.slug && p.data.category === post.data.category)
  .slice(0, 3);

// Formatear fecha corta para posts relacionados
function formatDateShort(date: Date): string {
  return date
    .toLocaleDateString("es-ES", {
      day: "2-digit",
      month: "short",
      year: "numeric",
    })
    .toUpperCase();
}

// Obtener colores y slug de la categoría
const categoryColors = CATEGORY_COLORS[post.data.category as BlogCategory] || { bg: 'bg-slate-100', text: 'text-slate-600' };
const categorySlug = CATEGORY_SLUGS[post.data.category as BlogCategory] || post.data.category.toLowerCase().replace(/\s+/g, '-');
